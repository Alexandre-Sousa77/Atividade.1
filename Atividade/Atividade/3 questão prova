#include <stdio.h>

int main() {
    int qtd, num, maior, cont = 0;

    printf("Quantos numeros deseja digitar? ");
    scanf("%d", &qtd);

    if (qtd <= 0) {
        printf("Quantidade invalida.\n");
        return 0;
    }

    for (int i = 0; i < qtd; i++) {
        printf("Digite o %dÂº numero: ", i + 1);
        scanf("%d", &num);

        if (i == 0) {
            maior = num;
            cont = 1;
        } else {
            if (num > maior) {
                maior = num;
                cont = 1;
            } else if (num == maior) {
                cont++;
            }
        }
    }

    printf("O maior numero eh: %d\n", maior);
    printf("Ele apareceu %d vez(es)\n", cont);

    return 0;
}
